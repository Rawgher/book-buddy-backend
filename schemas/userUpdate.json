{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "maxLength": 50,
        "description": "New username for the user"
      },
      "email": {
        "type": "string",
        "format": "email",
        "maxLength": 100,
        "description": "New email address for the user"
      },
      "password": {
        "type": "string",
        "minLength": 8,
        "description": "New password for the user (plaintext, to be hashed)"
      }
    },
    "additionalProperties": false
}